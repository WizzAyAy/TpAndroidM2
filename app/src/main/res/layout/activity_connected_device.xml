<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectedDeviceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="go back" />

            <Button
                android:id="@+id/button_speed_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="speed up" />

            <Button
                android:id="@+id/button_slow_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="slow down" />

            <Button
                android:id="@+id/button_save_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save speed" />
        </LinearLayout>


        <TextView
            android:id="@+id/connected_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/connected_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iamge_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/box_foreground" />

        <com.example.tp1.CanvasView
            android:id="@+id/view_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>